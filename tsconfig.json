// tsconfig.json (корень)
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node", "jest"]
  },
  "include": [
    "src",
    "vite.config.ts",
    "admin"
, "api"  ],
  "exclude": [
    "node_modules"
  ]
}
