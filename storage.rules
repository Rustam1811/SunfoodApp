rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Разрешаем загрузку файлов в папку uploads для авторизованных пользователей
    match /uploads/{allPaths=**} {
      allow read: if true; // Чтение доступно всем
      allow write: if request.auth != null && 
                      request.resource.size < 50 * 1024 * 1024 && // Максимум 50MB
                      request.resource.contentType.matches('image/.*|video/.*'); // Только изображения и видео
    }
    
    // Для других путей требуется авторизация
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
